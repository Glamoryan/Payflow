FROM golang:1.21-alpine AS builder

WORKDIR /app

RUN apk add --no-cache git gcc musl-dev

COPY go.mod go.sum ./
RUN go mod download

COPY . .

RUN CGO_ENABLED=1 GOOS=linux go build -a -tags musl -o payflow-server ./cmd/server

FROM alpine:3.19

WORKDIR /app

RUN apk add --no-cache ca-certificates tzdata sqlite

COPY --from=builder /app/payflow-server /app/payflow-server

COPY --from=builder /app/.env* /app/
RUN touch /app/.env

EXPOSE 8080

CMD ["./payflow-server"]